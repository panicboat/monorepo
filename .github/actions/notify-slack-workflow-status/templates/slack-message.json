{
  "channel": "{{slack-channel}}",
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "{{title}} in PR #{{pr-number}}"
      }
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": "*Author:*\n{{pr-author}}"
        },
        {
          "type": "mrkdwn",
          "text": "*Status:*\n{{workflow-status}}"
        }
      ]
    },
    {
      "type": "actions",
      "elements": [
        {
          "type": "button",
          "text": {
            "type": "plain_text",
            "text": "View PR"
          },
          "url": "{{pr-url}}"
        }
      ]
    }
  ]
}
