{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "labels": ["dependencies"],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,

  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,

  "schedule": ["before 4am every weekday"],
  "minimumReleaseAge": "1 day",

  "packageRules": [
    {
      "description": "ğŸš« Production environments - manual review only",
      "matchPaths": ["**/production/**", "**/*production*/**"],
      "automerge": false,
      "addLabels": ["âš ï¸ production", "manual-review"]
    },

    {
      "description": "ğŸš« Major updates - manual review only",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["ğŸ“ˆ major-update", "manual-review"]
    },

    {
      "description": "âœ… Everything else - auto-merge",
      "matchPackagePatterns": ["*"],
      "automerge": true,
      "addLabels": ["ğŸ¤– auto-merge"],
      "groupName": "{{packageFileDir}} dependencies"
    }
  ],

  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "branchPrefix": "renovate/"
}
