{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "labels": ["dependencies"],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,

  "automerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "platformAutomerge": true,

  "schedule": ["before 4am every weekday"],
  "minimumReleaseAge": "1 day",

  "packageRules": [
    {
      "description": "🚫 Production environments - manual review only",
      "matchPaths": ["**/production/**", "**/*production*/**"],
      "automerge": false,
      "addLabels": ["⚠️ production", "manual-review"]
    },

    {
      "description": "🚫 Major updates - manual review only",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "addLabels": ["📈 major-update", "manual-review"]
    },

    {
      "description": "✅ Everything else - auto-merge",
      "matchPackagePatterns": ["*"],
      "automerge": true,
      "addLabels": ["🤖 auto-merge"],
      "groupName": "{{packageFileDir}} dependencies"
    }
  ],

  "prConcurrentLimit": 15,
  "prHourlyLimit": 3,

  "branchPrefix": "renovate/",

  "commitMessagePrefix": "⬆️",
  "commitMessageAction": "Update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}"
}
